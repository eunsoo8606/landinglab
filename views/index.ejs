      <script>
        document.addEventListener('DOMContentLoaded', () => {
          const section = document.getElementById('why-digital');
          const cards = document.querySelectorAll('.active-card');
          const pathFill = document.getElementById('scroll-path-fill');
          const orbs = document.querySelectorAll('.parallax-orb');

          // 3D Tilt & Glow Effect (상시 작동)
          cards.forEach(card => {
            card.addEventListener('mousemove', e => {
              const rect = card.getBoundingClientRect();
              const x = e.clientX - rect.left;
              const y = e.clientY - rect.top;
              card.style.setProperty('--mouse-x', `${x}px`);
              card.style.setProperty('--mouse-y', `${y}px`);
              const centerX = rect.width / 2;
              const centerY = rect.height / 2;
              const rotateX = (y - centerY) / 15;
              const rotateY = (centerX - x) / 15;
              card.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            });
            card.addEventListener('mouseleave', () => {
              card.style.transform = 'rotateX(0) rotateY(0)';
            });
          });

          // 통합 스크롤 이벤트 (Parallax + Path Fill + Card Reveal)
          const handleScroll = () => {
            const rect = section.getBoundingClientRect();
            const windowHeight = window.innerHeight;

            // 1. 섹션 내 스크롤 진행도 계산 (0 ~ 1)
            const scrollDistance = -rect.top + (windowHeight * 0.5);
            const scrollProgress = Math.max(0, Math.min(1, scrollDistance / rect.height));

            // 2. Path Fill 애니메이션
            if (pathFill) pathFill.style.height = `${scrollProgress * 100}%`;

            // 3. Orbs Parallax
            orbs.forEach(orb => {
              const speed = parseFloat(orb.getAttribute('data-speed'));
              const yOffset = rect.top * speed;
              orb.style.transform = `translateY(${yOffset}px)`;
            });

            // 4. Card Reveal (Scroll triggered)
            cards.forEach(card => {
              const cardRect = card.getBoundingClientRect();
              if (cardRect.top < windowHeight * 0.85) {
                card.classList.add('scrolled-active');
              }
            });
          };

          window.addEventListener('scroll', handleScroll);
          handleScroll(); // 초기 실행

          // Count Up 애니메이션 (Intersection Observer 유지)
          const countUps = document.querySelectorAll('.stat-num');
          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                const target = entry.target;
                const endValue = parseFloat(target.getAttribute('data-count'));
                const decimals = parseInt(target.getAttribute('data-decimals') || 0);
                const duration = 2000;
                const startTime = performance.now();
                const animateCount = (currentTime) => {
                  const elapsed = currentTime - startTime;
                  const progress = Math.min(elapsed / duration, 1);
                  const easeOutExpo = progress === 1 ? 1 : 1 - Math.pow(2, -10 * progress);
                  target.innerText = (easeOutExpo * endValue).toFixed(decimals);
                  if (progress < 1) requestAnimationFrame(animateCount);
                };
                requestAnimationFrame(animateCount);
                observer.unobserve(target);
              }
            });
          }, { threshold: 0.5 });
          countUps.forEach(el => observer.observe(el));
        });
      </script>

